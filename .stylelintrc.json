{
  "extends": [
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "max-nesting-depth": 4,
    "selector-max-id": 1,
    "selector-class-pattern": "^[a-zA-Z]([a-zA-Z0-9-]+)?(__([a-z0-9]+-?)+){0,2}?(--([a-z0-9]+-?)+){0,2}$",
    "at-rule-no-unknown": null,
    "selector-max-compound-selectors": null
  }
}
